set -eu

shopt -s extglob

readonly CONFFILE="/etc/sbupdate.conf"

# Print an error and return unsuccessfully
#  $1: error message
function error() {
  echo "$0: error: $1" >&2
  return 1
}

# Load configuration
function load_config() {
  KEY_DIR="/etc/efi-keys"
  ESP_DIR="/boot"
  OUT_DIR="EFI/Arch"
  SPLASH="/usr/share/systemd/bootctl/splash-arch.bmp"
  BACKUP=1
  EXTRA_SIGN=()
  declare -g -A CMDLINE INITRD KERNEL

  shopt -s nullglob
  INITRD_PREPEND=(/boot/@(intel|amd)-ucode.img)
  shopt -u nullglob

  # shellcheck disable=SC1090
  source "${CONFFILE}"

  [[ -d "${ESP_DIR}" ]] || error "${ESP_DIR} does not exist"
  [[ -n "${CMDLINE_DEFAULT:+x}" ]] \
    || error "CMDLINE_DEFAULT is not defined or empty in ${CONFFILE}"

  readonly KEY_DIR ESP_DIR OUT_DIR SPLASH BACKUP EXTRA_SIGN INITRD_PREPEND CMDLINE_DEFAULT
  readonly -A CMDLINE INITRD KERNEL
}

# Parse script arguments
#  $@: arguments
function parse_args() {
  HOOK=0

  while getopts "k" opt; do
    case "${opt}" in
      k) HOOK=1 ;;
      ?) exit 1 ;;
    esac
  done

  readonly HOOK
}

# Find the location of the systemd EFI stub
function find_efi_stub() {
  local uname; uname="$(uname -m)"
  case "${uname}" in
    x86_64)
      readonly EFISTUB="/usr/lib/systemd/boot/efi/linuxx64.efi.stub"
      ;;
    i686)
      readonly EFISTUB="/usr/lib/systemd/boot/efi/linuxia32.efi.stub"
      ;;
    *)
      error "unsupported architecture: ${uname}"
      ;;
  esac
}

# Create a list of kernels to process
function get_kernels() {
  local all_kernels=(${!KERNEL[@]} ${!CMDLINE[@]} ${!INITRD[@]});
  local kernel_lookup
  declare -A kernel_lookup
  for kernel in "${all_kernels[@]}"; do
    kernel_lookup[$kernel]="${KERNEL[$kernel]:-$kernel}"
  done
  all_kernels=("${!kernel_lookup[@]}")

  declare -g -a KERNELS OLD_KERNELS
  local force_all=0

  if (( HOOK )); then
    # The script was run from the hook. Read standard input to determine
    # which kernels we need to update.
    while read -r target; do
      if [[ "${target}" =~ ^usr/lib/modules/(.+)/vmlinuz$ ]]; then
        local changed_image="${BASH_REMATCH[1]}"
        local kernels= # trialing = is necessary to have it bound after unset
        declare -A kernels
        for kernel in "${!kernel_lookup[@]}"; do
          local image="${kernel_lookup[$kernel]}"
          if [[ "$changed_image" == "$image" ]]; then
            kernels[$kernel]=1
          fi
        done
        echo "for $changed_image found: ${!kernels[@]}"
        # Regular kernel
        if [[ ${#kernels[@]} > 0 ]]; then
          if [[ ! -f "/${target}" ]]; then
            #echo "removed /$target"
            # We are removing this kernel
            OLD_KERNELS+=("${!kernels[@]}")
          else
            #echo "changed /$target"
            KERNELS+=("${!kernels[@]}")
          fi
        fi
        unset kernels
      else
        # Another dependency; update all kernels
        force_all=1
      fi
    done
  else
    # The script was run by the user
    force_all=1
  fi

  if (( force_all )); then
    KERNELS=("${all_kernels[@]}")
  fi
  readonly -a KERNELS OLD_KERNELS
}

# Return output file path corresponding to a kernel/initrd pair
#   $1: kernel name
function output_name() {
  echo "${ESP_DIR}/${OUT_DIR}/$1-signed.efi"
}

# Remove a signed kernel image
#   $1: kernel name
function remove_image() {
  local output="$(output_name "$1")"
  echo "Removing $(basename "${output}")"
  rm -f "${output}" "${output}.bak"
}

# Generate a signed kernel image
#   $1: kernel name
function update_image() {
  local linux_name="${KERNEL[$1]:-$1}"
  local linux="/usr/lib/modules/${linux_name}/vmlinuz"
  local cmdline="${CMDLINE[$1]:-${CMDLINE_DEFAULT}}"
  local output="$(output_name "$1")"
  local initrd="${INITRD[$1]:-/boot/initramfs-${linux_name}.img}"

  echo "Generating and signing $(basename "${output}")"

  # Back up existing file if present
  if (( BACKUP )) && [[ -f "${output}" ]]; then
    mv "${output}" "${output}.bak"
  fi

  # Create a combined binary with systemd EFI stub. For additional information see:
  #   https://github.com/systemd/systemd/blob/master/src/boot/efi/stub.c
  #   https://github.com/systemd/systemd/blob/master/test/test-efi-create-disk.sh
  #
  # Prepend initramfs files are joined with the main initramfs in one image. Refer to:
  #   https://www.kernel.org/doc/Documentation/early-userspace/buffer-format.txt
  #   https://www.kernel.org/doc/Documentation/x86/early-microcode.txt
  objcopy \
    --add-section .osrel="/etc/os-release"                        --change-section-vma .osrel=0x20000    \
    --add-section .cmdline=<(echo -n "${cmdline}")                --change-section-vma .cmdline=0x30000  \
    --add-section .splash="${SPLASH}"                             --change-section-vma .splash=0x40000   \
    --add-section .linux="${linux}"                               --change-section-vma .linux=0x2000000  \
    --add-section .initrd=<(cat "${INITRD_PREPEND[@]}" "$initrd") --change-section-vma .initrd=0x3000000 \
    "${EFISTUB}" "${output}"
  wait $!

  # Sign the resulting output file
  sign_file "${output}" "${output}"
}

# Process changes for a kernel
#   $1: operation (remove_image or update_image)
#   $2: kernel name
function process_kernel() {
  "$1" "$2"
}

# Check and sign a user-specified extra file
#   $1: file path
function check_sign_extra_file() {
  if sbverify --cert "${KEY_DIR}"/@(DB|db).crt "$1" >/dev/null 2>&1; then
    echo "Skipping already signed file $1"
  elif (( HOOK )); then
    # Signing extra files from the hook is prohibited for security reasons
    echo "warning: failed to verify $1" >&2
  else
    echo "Signing $1"
    sign_file "$1" "$1"
  fi
}

# Sign a file
#   $1: source file
#   $2: target file
function sign_file() {
  sbsign --key "${KEY_DIR}"/@(DB|db).key --cert "${KEY_DIR}"/@(DB|db).crt --output "$2" "$1"
}

# Entry point
function main() {
  load_config
  parse_args "$@"

  find_efi_stub
  get_kernels

  mkdir -p "${ESP_DIR}/${OUT_DIR}"
  for k in "${OLD_KERNELS[@]}"; do
    process_kernel remove_image "$k"
  done
  for k in "${KERNELS[@]}"; do
    process_kernel update_image "$k"
  done

  for f in "${EXTRA_SIGN[@]}"; do
    check_sign_extra_file "$f"
  done
}

main "$@"

